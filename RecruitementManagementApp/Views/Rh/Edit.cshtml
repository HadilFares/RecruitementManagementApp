@model RecruitementManagementApp.Models.CandidatOffre

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CandidatOffre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCandidat" />
            <input type="hidden" asp-for="codeOffre" />
            <label asp-for="Status"></label>
            <select asp-for="Status" class="form-control">
