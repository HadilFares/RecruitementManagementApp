                <option value="Rejetees">Rejeté(e)</option>
            </select>
            <span asp-validation-for="Status"></span>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

